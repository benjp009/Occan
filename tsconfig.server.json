{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": "./src",
    "declaration": false,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/App.tsx",
    "src/utils/api.ts",
    "src/utils/slugify.ts",
    "src/pages/**/*.tsx",
    "src/components/**/*.tsx",
    "src/**/*.d.ts"
  ]
}
