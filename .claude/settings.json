{
  "permissions": {
    "allow": [
      "Bash(gcloud config:*)",
      "Bash(gcloud run services describe:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(mgrep:*)",
      "Read"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": "python3 .claude/hooks/mgrep_watch.py"
      }
    ],
    "SessionEnd": [
      {
        "type": "command",
        "command": "python3 .claude/hooks/mgrep_watch_kill.py"
      }
    ]
  }
}
